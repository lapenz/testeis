<p id="notice"><%= notice %></p>

<h1>Listing Classrooms</h1>

<table class="table">
  <thead>
    <tr>
      <th>Students</th>
      <th>Courses</th>
      <th>Entry at</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @classrooms.each do |classroom| %>
      <tr>
        <td><%= classroom.student.name %></td>
        <td><%= classroom.course.name %></td>
        <td><%= classroom.entry_at %></td>
        <td>
        <div class="btn-group">
          <%= link_to 'Show', classroom, class: "btn btn-default" %>
          <%= link_to 'Edit', edit_classroom_path(classroom), class: "btn btn-default" %>
          <%= link_to 'Destroy', classroom, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger", role: "button" %>
        </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Classroom', new_classroom_path, class: "btn btn-primary", role: "button" %>
