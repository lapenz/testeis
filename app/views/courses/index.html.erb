<p id="notice"><%= notice %></p>

<h1>Listing Courses</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Status</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.name %></td>
        <td><%= course.description %></td>
        <td><%= course.status %></td>
        <td>
          <div class="btn-group">
            <%= link_to 'Show', course, class: "btn btn-default", role: "button" %>
            <%= link_to 'Edit', edit_course_path(course), class: "btn btn-default", role: "button" %>
            <%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger", role: "button" %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Course', new_course_path, class: "btn btn-primary", role: "button" %>
